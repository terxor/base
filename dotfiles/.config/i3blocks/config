# i3blocks/config

command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[volume]
command=~/.config/i3blocks/volume_bar
label=VOL
instance=Master
interval=once
signal=10

[battery]
label=BAT
command=~/.config/i3blocks/battery_bar
interval=5

[time]
command=date "+%d-%b %A %H:%M"
interval=15

